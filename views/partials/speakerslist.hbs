<article class="speakerslist">
  <section class="layout">
    <div class="speakers">
      {{#each speakers}}
        <article class="artist group">
          <h3>{{this.title}}
            <span class="small">with
              <a href="/speakers/{{this.shortname}}">{{this.name}}</a>
            </span>
          </h3>

          <p>
            <a href="/speakers/{{this.shortname}}">
              <img class="speaker" src="/images/speakers/{{this.shortname}}_tn.jpg" alt="Photo of {{this.name}}">
            </a>

            {{!-- How to output 'this.summary' for /speakers route? --}}
            {{!-- How to output absolutely nothing for /home route? --}}
            {{!-- How to output 'this.description' for /speakers/:speakerid route? --}}
            {{{this.summary}}}
          </p>
        </article>
      {{/each}}
    </div>
  </section>
</article>
